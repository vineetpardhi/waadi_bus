<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siddhant.loginui.manager"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <!--Fixed snackbar for price and rating details-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="368dp"
        android:layout_height="605dp"
        android:fillViewport="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <com.synnapps.carouselview.CarouselView
                android:id="@+id/stay_carousel2"
                android:layout_width="364dp"
                android:layout_height="198dp"

                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />

            <FrameLayout
                android:layout_width="364dp"
                android:layout_height="91dp"
                android:layout_marginTop="20dp">


                <TextView
                    android:id="@+id/home_st_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/home_st_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="TextView"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/home_st_numofr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="TextView"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="120dp"
                    android:layout_marginBottom="8dp"
                    app:srcCompat="@drawable/home1" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="141dp">

                <TextView
                    android:id="@+id/home_st_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="10dp"
                    android:maxEms="15"
                    android:singleLine="false"
                    android:text="TextView"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Description" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="172dp">


                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Amenities" />

                <ListView
                    android:id="@+id/amm_list"
                    android:layout_width="295dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                </ListView>
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="139dp">

                <TextView
                    android:id="@+id/home_st_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="10dp"
                    android:maxEms="15"
                    android:singleLine="false"
                    android:text="TextView"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Comments" />


            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="117dp">


                <TextView
                    android:id="@+id/home_st_cordinates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/design_default_color_primary"
                    android:text="Click here to view on Maps" />



            </FrameLayout>




        </LinearLayout> <!--end of hotel details-->

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/home_st_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:text="â‚¹"
            android:textSize="20sp" />


        <RatingBar
            android:id="@+id/ratingBar3"
            style="@style/customRatingBar"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="-15dp"
            android:layout_weight="1"
            android:isIndicator="true"
            android:max="5"
            android:padding="20dip"
            android:rating="4"
            android:scaleX=".8"
            android:scaleY=".8"
            android:stepSize=".1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:id="@+id/home_stay_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textColor="#000000" />

        <Button
            android:id="@+id/call_stays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:text="Call Stays"
            android:background="@drawable/buttonstyle"/>




    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>