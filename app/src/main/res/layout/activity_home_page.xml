<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".home_page"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_gravity="center"

                android:background="@drawable/waadi"
                app:srcCompat="@drawable/waadi" />


            <Button
                android:id="@+id/login_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff" />




            <Button
                android:id="@+id/nav_btn"
                android:layout_width="33dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_menu_24px" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_gravity="center">


            <Button
                android:id="@+id/button3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"

                android:background="@drawable/marathi" />

            <Button
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity=""
                android:layout_marginTop="15dp"

                android:background="@drawable/english" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">


            <Button
                android:id="@+id/button5"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/st"
                android:onClick="gotoBus" />


            <Button
                android:id="@+id/button7"
                android:layout_width="65dp"
                android:layout_height="105dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/train"
                android:onClick="gotoTrail" />

            <Button
                android:id="@+id/button6"
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"

                android:background="@drawable/auto"
                android:onClick="gotoRickshaw" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <Button
                android:id="@+id/button8"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"

                android:background="@drawable/cab" />


            <Button
                android:id="@+id/button9"
                android:layout_width="70dp"
                android:layout_height="105dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"

                android:background="@drawable/picnic" />

            <Button
                android:id="@+id/button10"
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@drawable/stay"
                android:onClick="gotoStays" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="135dp">

            <Button
                android:id="@+id/button11"
                android:layout_width="70dp"
                android:layout_height="110dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"

                android:background="@drawable/religious" />


            <Button
                android:id="@+id/button12"
                android:layout_width="70dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"

                android:background="@drawable/help" />


        </FrameLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        app:itemTextColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">



        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/busroot"/>

        <Button
            android:id="@+id/close_btn"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_close_24px" />


        <ImageView
            android:id="@+id/usrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_account_circle_24px" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="160dp"
            android:text="Notifications"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/usern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:textColor="#ffffff"
            android:layout_marginTop="110dp"
            android:text="Username" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications_24px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="Upgrade"
            android:layout_marginTop="200dp"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_publish_24px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="240dp"
            android:text="Contact Us"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="240dp"
            android:src="@drawable/call" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="280dp"
            android:text="Review"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_content_paste_24px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="280dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="320dp"
            android:text="Advertise with us"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_poll_24px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="320dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="360dp"
            android:text="Terms and Conditions"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_assignment_24px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="360dp"/>








    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>